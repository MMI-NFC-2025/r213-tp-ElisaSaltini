---
import { getImageUrl } from "../backend.mjs";

const {
    record,
    imageField,
    width = 400, // valeur par défaut
    height = 300, // valeur par défaut
} = Astro.props;

const imageURL = await getImageUrl(record, imageField);
---

{
    imageURL && (
        <img
            src={imageURL}
            alt={record.nomMaison || "Image"}
            width={width}
            height={height}
            loading="lazy"
            class="pb-image block w-full object-cover"
        />
    )
}
